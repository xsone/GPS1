<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
   <PreferenceCategory
    android:title="Settings" >

       <EditTextPreference
           android:defaultValue="00:00:00:00:00:00"
           android:dialogTitle="Enter BT MacAddress"
           android:inputType="text"
           android:key="btMacAddress"
           android:phoneNumber="true"
           android:summary="BT MacAddress"
           android:title="BT MacAddress" />

       <EditTextPreference
           android:defaultValue="xsone2@gmail.com"
           android:dialogTitle="Enter Email Address"
           android:inputType="textEmailAddress"
           android:key="emailaddress"
           android:summary="Send alarm by email"
           android:title="Email Address" />

       <EditTextPreference
           android:defaultValue="5"
           android:dialogTitle="Enter interval (sec.)"
           android:inputType="numberDecimal"
           android:key="logInterval"
           android:summary="Set log interval"
           android:title="Set Log Interval GPS (sec.)" />
    </PreferenceCategory>
 </PreferenceScreen>